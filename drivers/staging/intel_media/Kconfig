	bool "Support for Medfield Video Decode"
	depends on DRM_MDFLD || DRM_CTP
	default n
	help
	  xxxxxx

config SUPPORT_MIPI_H8C7_DISPLAY
       bool "Support CMI h8c7 720x1280 MIPI interface Panel"
